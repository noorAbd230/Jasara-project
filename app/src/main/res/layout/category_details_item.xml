<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="148dp"
        android:layoutDirection="ltr"
        android:layout_height="199dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="25dp"
        >

        <LinearLayout
            android:id="@+id/card_category_details"
            android:background="#4D4F8B8D"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_gravity="start"
                android:background="@drawable/category_rounded"
                android:layout_height="35dp">

                <ImageView
                    android:id="@+id/product_favorite"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/category_details_Img"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/banana"
                />

            <TextView
                android:id="@+id/category_details_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="end"
                android:textColor="#000"
                android:fontFamily="@font/cairo_bold"
                android:text="حمص ايطاليانو"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/category_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:fontFamily="@font/cairo_bold"
                android:text="3$/KG"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="-19dp"
                android:background="@drawable/category_bottom_rounded"
                android:layout_height="35dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>