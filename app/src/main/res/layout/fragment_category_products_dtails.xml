<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CategoryProductsDtailsFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FDE4D5"
        android:layout_height="300dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            >

            <ImageView
                android:id="@+id/category_details_back"
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/category_product_img"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/apples"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/layout_rounded"
            android:layout_height="match_parent">


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-90dp"
        android:padding="20dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="47dp"
            android:clipToPadding="false"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:layout_height="40dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_marginTop="-10dp"
                card_view:cardBackgroundColor="#F6F6F6"
                card_view:cardElevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_Img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/greenapple"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="47dp"
            android:clipToPadding="false"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:clipChildren="false"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_marginTop="-10dp"
                card_view:cardBackgroundColor="#F6F6F6"
                card_view:cardElevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/redapple"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="47dp"
            android:clipToPadding="false"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clipChildren="false"
            android:layout_height="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_marginTop="-10dp"
                card_view:cardBackgroundColor="#F6F6F6"
                card_view:cardElevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/redapple1"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/categoryProductDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_bold"
                android:text="تفاح أخضر"
                android:layout_marginStart="30dp"
                android:textColor="#212121"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginStart="80dp"
                android:background="@drawable/note_btn_style"

                android:gravity="center"
                android:layout_marginLeft="80dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addNote"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:textColor="@color/purple_500"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/product_details_subtitle"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="وصف عن وصف عن وصف عن وصف عن وصف عن وصف عن وصف عن"
            android:textColor="#8E8A82"
            android:textSize="14dp"
            android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/pDetails_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/priceForKilo"
                android:textColor="#5B8683"
                android:textSize="13dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/priceForKilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="5"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_marginLeft="25dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/shekel"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/quantity"
                android:textColor="#5B8683"
                android:textSize="13dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/add_btn_style"
                android:layout_marginLeft="80dp" >

                <ImageView
                    android:id="@+id/product_details_add"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_marginLeft="25dp" />
                <TextView
                    android:id="@+id/product_details_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="10dp"
                    android:layout_marginLeft="25dp" />

                <ImageView
                    android:id="@+id/product_details_minus"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_minimize_24"
                    android:layout_marginLeft="25dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_marginLeft="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kg"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_marginLeft="25dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/cairo"
            android:text="@string/addToCart"
            android:textSize="21dp"
            android:textColor="@color/white"
             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/simiProducts"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSimilarCategory"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    </LinearLayout>
</ScrollView>