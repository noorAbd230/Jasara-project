<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MoreFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                >


                <ImageView
                    android:id="@+id/previous_order_back"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_height="120dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_more"
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:elevation="8dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:layout_gravity="center"
                        android:src="@drawable/meats"
                         />

                </LinearLayout>



                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                         >

                        <TextView
                            android:id="@+id/more_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_bold"
                            android:text="صفاء أبو وردة"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/more_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo"
                            android:text="972594480207+"
                            android:textColor="#707070"
                            android:textSize="12dp" />
                    </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:paddingStart="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_baseline_person_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="#82707070" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingStart="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:src="@drawable/moneybill"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="#82707070" />


                <LinearLayout
                    android:id="@+id/payment_method"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingStart="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_baseline_credit_card_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paymentMethod"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="#82707070" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="78dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="#82707070" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingStart="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:src="@drawable/userssolid"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="#82707070" />


                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_baseline_settings_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>