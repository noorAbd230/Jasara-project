<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/toMore_back"
                        android:layout_width="20dp"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/categoryDetailsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/setting"
                        android:layout_marginStart="30dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_marginLeft="30dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/setting_logout"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_login_24"
                     />


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="120dp"
                android:gravity="center"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_height="120dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_setting"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_gravity="center"
                    android:src="@drawable/meats"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                 >

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_bold"
                    android:text="صفاء أبو وردة"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/userMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="972594480207+"
                    android:textColor="#707070"
                    android:textSize="12dp" />


                <LinearLayout
                    android:id="@+id/update_profile"
                    android:layout_width="55dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:background="@drawable/profile_btn_style"
                    android:layout_marginTop="10dp"
                     >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="11dp"
                        android:layout_gravity="center"
                        android:textColor="@color/teal_700"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:clipToPadding="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:clipChildren="false"
                android:layout_height="310dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    card_view:cardBackgroundColor="#F6F6F6"
                    card_view:cardElevation="10dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="15dp"
                        android:paddingStart="20dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:fontFamily="@font/cairo_semibold"
                            android:layout_marginStart="30dp"
                            android:layout_marginLeft="30dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#D3D3D3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingStart="20dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_baseline_lock_open_24"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/editPassword"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="#D3D3D3" />


                        <LinearLayout
                            android:id="@+id/orders"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingStart="20dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/bagtwo"
                                android:layout_marginLeft="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/orders"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="#D3D3D3" />


                        <LinearLayout
                            android:id="@+id/favorites"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingStart="20dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_baseline_favorite_border_24"
                                android:layout_marginLeft="5dp"
                                card_view:tint="@color/teal_700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/favorite"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="#D3D3D3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingStart="20dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_baseline_attach_money_24"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paymentMethod"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp" />


                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp" />


             <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="30dp"
                        android:paddingStart="20dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pNotification"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:fontFamily="@font/cairo_semibold"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp" />

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_marginEnd="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="#D3D3D3" />


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:paddingTop="30dp"
                     android:paddingStart="20dp"
                     android:layout_height="wrap_content"
                     android:paddingLeft="20dp">


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/trackLocation"
                         android:layout_gravity="center"
                         android:textColor="@color/black"
                         android:textSize="17dp"
                         android:fontFamily="@font/cairo_semibold"
                         android:layout_marginStart="10dp"
                         android:layout_marginLeft="10dp" />

                     <Switch
                         android:id="@+id/switchLoc"
                         android:layout_marginEnd="25dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="30dp" />


                 </LinearLayout>

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="15dp"
                     android:layout_marginStart="20dp"
                     android:layout_marginEnd="20dp"
                     android:background="#D3D3D3" />

             </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Else"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:clipToPadding="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:clipChildren="false"
                android:layout_height="140dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    card_view:cardBackgroundColor="#F6F6F6"
                    card_view:cardElevation="10dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/lang"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="15dp"
                        android:paddingStart="20dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lang"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:fontFamily="@font/cairo_semibold"
                            android:layout_marginStart="30dp"
                            android:layout_marginLeft="30dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#D3D3D3" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="15dp"
                            android:paddingStart="20dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="#D3D3D3" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



<!--            <Button-->
<!--                android:id="@+id/logoutBtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="53dp"-->
<!--                android:layout_marginLeft="30dp"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:layout_marginRight="30dp"-->
