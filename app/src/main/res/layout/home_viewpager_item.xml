<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sliderBk"
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:background="@drawable/pink_slider_bk_style"
        android:layout_height="160dp">
        <ImageView
            android:layout_width="119dp"
            android:layout_height="114dp"
            android:id="@+id/image"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:src="@drawable/indianflour"
            android:layout_marginLeft="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="72dp"
                    android:gravity="center"
                    android:background="@drawable/ad_btn_style"
                        android:layout_height="27dp"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عرض التكسير"
                        android:textColor="@color/purple_500"
                        android:textSize="10dp"
                        android:fontFamily="@font/cairo_bold"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/sliderDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="احصل على خصم %25 لجميع
   المنتجات                           "
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:fontFamily="@font/cairo_bold"
                    />

                <TextView
                    android:id="@+id/sliderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:fontFamily="@font/cairo_bold"
                    />

            </LinearLayout>
    </LinearLayout>

</RelativeLayout>